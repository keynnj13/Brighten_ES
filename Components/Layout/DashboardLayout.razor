@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="flex h-screen bg-gray-50 overflow-hidden" @onclick="CloseDropdownIfOpen">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-lg flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-gray-200">
   <img src="brighthenlogo.png" alt="BrightenRoll Logo" class="w-32 h-32 mx-auto object-contain" />
 </div>

        <!-- Navigation Menu -->
    <nav class="flex-1 p-4 overflow-y-auto">
     <NavLink href="/dashboard" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative" Match="NavLinkMatch.All">
     <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
 <span class="flex-1">Dashboard</span>
</NavLink>

    <NavLink href="/enrollment" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative">
 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
      </svg>
   <span class="flex-1">Enrollment</span>
          </NavLink>

          <NavLink href="/student-record" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative">
         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
  </svg>
  <span class="flex-1">Student Record</span>
    </NavLink>

    <NavLink href="/academics" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
  </svg>
      <span class="flex-1">Academics</span>
       </NavLink>

      <NavLink href="/finance" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
     <span class="flex-1">Finance</span>
     </NavLink>

     <NavLink href="/human-resource" class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg font-medium transition-all relative">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
       <span class="flex-1">Human Resource</span>
     </NavLink>
        </nav>
    </div>

  <!-- Main Content Area -->
    <div class="flex-1 flex flex-col overflow-hidden">
     <!-- Top Bar with Rounded Card -->
        <div class="p-4">
        <div class="bg-white shadow-sm border border-gray-200 rounded-2xl px-8 py-4">
  <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-800">@GetPageTitle()</h1>
  
           <!-- User Profile Dropdown -->
 <div class="relative" @onclick:stopPropagation="true">
   <button @onclick="ToggleDropdown" class="flex items-center gap-3 px-4 py-2 bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow cursor-pointer">
          <img src="https://ui-avatars.com/api/?name=Moni+Roy&background=ec4899&color=fff" alt="User Avatar" class="w-10 h-10 rounded-full" />
    <div class="text-left">
          <p class="text-sm font-semibold text-gray-800">Moni Roy</p>
     <p class="text-xs text-gray-500">Admin</p>
       </div>
     <svg class="w-4 h-4 text-gray-400 transition-transform duration-200 @(isDropdownOpen ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
       </svg>
    </button>

       <!-- Dropdown Menu -->
   @if (isDropdownOpen)
              {
 <div class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50 dropdown-menu">
       <!-- Profile Option -->
        <a href="/profile" @onclick="CloseDropdown" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-50 transition-colors">
         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
     </svg>
             <span class="text-sm font-medium">My Profile</span>
        </a>

          <!-- Settings Option -->
       <a href="/settings" @onclick="CloseDropdown" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-50 transition-colors">
       <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
     </svg>
        <span class="text-sm font-medium">Settings</span>
         </a>

        <!-- Divider -->
        <div class="my-2 border-t border-gray-200"></div>

          <!-- Logout Option -->
     <button @onclick="Logout" class="flex items-center gap-3 px-4 py-2 text-red-600 hover:bg-red-50 transition-colors w-full text-left">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
     </svg>
   <span class="text-sm font-medium">Logout</span>
        </button>
        </div>
        }
        </div>
         </div>
  </div>
        </div>

   <!-- Page Content -->
      <div class="flex-1 overflow-auto">
   <div class="px-8 pb-8">
       @Body
     </div>
    </div>
    </div>
</div>

@code {
    private bool isDropdownOpen = false;

    private string GetPageTitle()
    {
      var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
  
     return currentPath switch
    {
  "dashboard" => "Dashboard",
  "enrollment" => "Enrollment",
        "student-record" => "Student Record",
       "academics" => "Academics",
 "finance" => "Finance",
  "human-resource" => "Human Resource",
     _ => "Dashboard"
      };
 }

    private void ToggleDropdown()
  {
        isDropdownOpen = !isDropdownOpen;
  }

    private void CloseDropdown()
    {
  isDropdownOpen = false;
    }

    private void CloseDropdownIfOpen()
    {
     if (isDropdownOpen)
    {
            isDropdownOpen = false;
        }
    }

    private void Logout()
  {
        isDropdownOpen = false;
// TODO: Implement logout logic
      Navigation.NavigateTo("/login");
    }
}
