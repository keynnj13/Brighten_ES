@page "/login"
@inject NavigationManager Navigation

<div class="h-screen bg-gray-100 flex overflow-hidden">
    <!-- Left Side - Image with kid -->
    <div class="hidden md:flex md:w-1/2 bg-white items-center justify-center p-0 overflow-hidden">
  <img src="kid.png" alt="Child learning alphabet" class="w-full h-full object-cover" />
    </div>
  
  <!-- Right Side - Login Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-4 overflow-y-auto">
        <div class="bg-white rounded-2xl shadow-xl p-6 sm:p-8 w-full max-w-md my-4">
         <div class="flex flex-col items-center">
    <!-- Logo -->
             <div class="mb-4">
  <img src="brighthenlogo.png" alt="BrightenRoll Logo" class="w-28 h-28 sm:w-32 sm:h-32 object-contain" />
     </div>
         
        <!-- Title and Subtitle -->
           <div class="text-center mb-6">
         <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Log in to your account</h1>
      <p class="text-sm sm:text-base text-gray-600">Access your account and start managing student enrollments with ease and confidence.</p>
         </div>
        
     <!-- Login Form -->
     <form class="w-full space-y-4" @onsubmit="HandleLogin">
        <!-- Username Field -->
              <div>
  <label class="block text-sm font-medium text-gray-700 mb-2">
         Enter username <span class="text-red-500">*</span>
 </label>
          <div class="relative">
           <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
<svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
     </svg>
           </div>
       <input 
     type="text" 
          @bind="username"
         placeholder="Username" 
     class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
        />
  </div>
           </div>
      
      <!-- Password Field -->
         <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">
         Enter password <span class="text-red-500">*</span>
            </label>
    <div class="relative">
<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
           <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
           </svg>
           </div>
<input 
      type="@(showPassword ? "text" : "password")"
@bind="password"
         placeholder="Password" 
       class="w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
    />
        <button 
          type="button"
      @onclick="TogglePasswordVisibility"
    class="absolute inset-y-0 right-0 pr-3 flex items-center"
         >
    @if (showPassword)
      {
   <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
               </svg>
           }
          else
             {
      <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
             </svg>
         }
</button>
        </div>
   </div>
      
             <!-- Remember Me Checkbox -->
                    <div class="flex items-center">
          <input 
           id="remember-me" 
        type="checkbox" 
       @bind="rememberMe"
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
       />
       <label for="remember-me" class="ml-2 block text-sm text-gray-700">
   Remember me
  </label>
   </div>
     
       <!-- Login Button -->
           <button 
            type="submit"
      class="w-full bg-blue-600 hover:bg-blue-700 active:bg-blue-800 text-white font-semibold py-3 px-6 rounded-full transition-colors duration-200 text-base uppercase tracking-wide"
   >
            LOG IN
       </button>
        
    <!-- Student Registration Link -->
    <div class="text-center pt-2">
       <a href="/student-registration" class="text-gray-700 hover:text-gray-900 text-sm underline">
          Student Registration
      </a>
   </div>
  </form>
         </div>
        </div>
    </div>
</div>

@code {
  private string username = string.Empty;
    private string password = string.Empty;
    private bool rememberMe = false;
    private bool showPassword = false;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
  }

    private void HandleLogin()
    {
        // TODO: Implement proper authentication logic
 // For now, navigate to dashboard
        if (!string.IsNullOrWhiteSpace(username) && !string.IsNullOrWhiteSpace(password))
    {
            Navigation.NavigateTo("/dashboard");
}
        else
    {
            Console.WriteLine($"Login attempt - Username: {username}, Remember: {rememberMe}");
        }
    }
}
